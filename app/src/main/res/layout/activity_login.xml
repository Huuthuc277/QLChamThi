<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D6C9E"
    tools:context=".activity.LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llMain"
        android:textSize="40sp"
        android:text="@string/title"
        android:textColor="@color/lemon_chiffon" />
    <LinearLayout
        android:id="@+id/llMain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/ic_baseline_icon"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_text"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/inputAccount"
            android:id="@+id/etTaiKhoan"/>

        <EditText
            android:paddingLeft="10dp"
            android:drawableStart="@drawable/ic_baseline_password"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_text"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/inputPassword"
            android:id="@+id/etMatKhau"/>
        <Button
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/white"
            android:background="@drawable/round_button"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:id="@+id/btnDangNhap"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>